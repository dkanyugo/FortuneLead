---
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Fortune Lead</title>
  </head>
  <body class="--font-primary">
    <header id="header">
      <nav
        class="absolute text-white text-lg w-screen flex flex-row items-center justify-center md:justify-between py-4 px-16 z-40"
      >
        <div
          class="flex flex-row items-center justify-center sm:justify-start md:space-x-12 space-x-4"
        >
          <img
            src="/assets/logo-white.svg"
            alt=""
            class="md:w-[150px] w-[200px] aspect-auto"
          />
          <a href="" class="px-4 py-3 text-white hidden lg:block">Home</a>
          <a href="#about" class="px-4 py-3 text-white hidden lg:block"
            >About</a
          >
          <div class="relative z-50">
            <div
              class="flex flex-row items-center justify-start space-x-2 py-3 hover:cursor-pointer"
              onmouseover="set_services(true)"
            >
              <div class="text-white hidden lg:block" id="services-link">
                Services
              </div>
              <img
                src="/assets/chevron-down.svg"
                alt="chevron-down"
                width="20px"
              />
            </div>
            <div
              class="bg-black/40 flex-col absolute py-4 w-fit text-nowrap hidden"
              id="nav-services"
              onmouseout="toggle_services(false)"
            >
              <a
                href="#leader"
                class="hover:cursor-pointer hover:border-white border-b-2 border-white/0 px-4 pb-2"
                >Leadership Development</a
              >
              <a
                href="#hr"
                class="hover:cursor-pointer hover:border-white border-b-2 border-white/0 px-4 pb-2"
                >Human Resource Consulting</a
              >
              <a
                href="#health"
                class="hover:cursor-pointer hover:border-white border-b-2 border-white/0 px-4 pb-2"
                >Workspace Health & Safety</a
              >
              <a
                href="#camp"
                class="hover:cursor-pointer hover:border-white border-b-2 border-white/0 px-4 pb-2"
                >Team Building & Camping</a
              >
            </div>
          </div>
        </div>
        <a
          href="#contact"
          class="bg-white px-4 py-3 text-(--primary) hidden md:block"
          >Book a call</a
        >
      </nav>
    </header>
    <slot />
    <footer class="bg-(--primary) text-white h-[50vh] w-screen">
      <div class="p-16 flex flex-col space-y-4">
        <h2 class="font-bold text-xl">Important links</h2>
        <a href="" class="hover:cursor-pointer">Home</a>
        <a href="#about" class="hover:cursor-pointer">About us</a>
        <a href="#contact" class="hover:cursor-pointer">Contact</a>
      </div>
      <p class="text-center">&copy Copyright 2025</p>
    </footer>
    <script src="/scripts/index.js"></script>
  </body>
</html>
